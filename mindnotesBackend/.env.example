# ==============================================
# MindNotes Backend Environment Variables
# ==============================================
# Copy this file to .env and fill in your values
# This file is committed to git as documentation
# The .env file is gitignored for security
# ==============================================

# ============= Django Settings =============
DEBUG=True
SECRET_KEY=your-secret-key-here

# ============= PostgreSQL Database =============
POSTGRES_DATABASE=mindnotes
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# ============= MongoDB Database =============
# For local MongoDB
MONGODB_URL=mongodb://localhost:27017/mindnotes
MONGODB_DATABASE=mindnotes
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_USER=
MONGODB_PASSWORD=

# For MongoDB Atlas (production)
# MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/mindnotes?retryWrites=true&w=majority

# ============= Google OAuth =============
GOOGLE_CLIENT_ID=your-google-client-id-here

# ============= Redis Cache (Optional) =============
REDIS_URL=redis://localhost:6379/1

# ============= Celery (Optional) =============
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ==============================================
# DOCKER COMPOSE USAGE:
# ==============================================
# When using docker-compose, these values are automatically
# overridden by the environment section in docker-compose.yml
# for container-to-container networking:
#   POSTGRES_HOST=postgres (not localhost)
#   MONGODB_HOST=mongodb (not localhost)
#   REDIS_URL=redis://redis:6379/1
# ==============================================

